<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

	<property name="now" value="now()" dbms="mysql,h2" />
	<property name="now" value="current_timestamp" dbms="postgresql" />
	<property name="now" value="sysdate" dbms="oracle" />
	<property name="autoIncrement" value="true"
		dbms="mysql,h2,postgresql,oracle" />
	<property name="floatType" value="float4" dbms="postgresql, h2" />
	<property name="floatType" value="float" dbms="mysql, oracle" />

	<changeSet id="20160211091012" author="content">		
		<!-- Added the entity role. -->
		<createTable tableName="role">
			<column name="role_id" type="bigint" autoIncrement="${autoIncrement}">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="role" type="varchar(100)" />
			<column name="createdate" type="timestamp without time zone" />
			<column name="updatedate" type="timestamp without time zone" />
			<column name="createdby" type="bigint" />
			<column name="updatedby" type="bigint" />
		</createTable>
		<createSequence sequenceName="role_sequence"
			startValue="1" incrementBy="1" />
		
		<!-- Added the entity users. -->
		<createTable tableName="users">
			<column name="user_id" type="bigint" autoIncrement="${autoIncrement}">
		<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="name" type="varchar(255)" />
			<column name="user_name" type="varchar(100)" />
			<column name="password" type="varchar(100)" />
			<column name="email" type="varchar(100)" />
			<column name="contactno" type="varchar(100)" />
			<column name="dateofbirth" type="date" />
			<column name="address" type="varchar(500)" />
			<column name="status" type="varchar(100)" />
			<column name="lock" type="varchar(100)" />
			<column name="role_id" type="bigint" />
			<column name="createdate" type="timestamp without time zone" />
			<column name="updatedate" type="timestamp without time zone" />
			<column name="createdby" type="bigint" />
			<column name="updatedby" type="bigint" />
		</createTable>
		<createSequence sequenceName="users_sequence"
			startValue="1" incrementBy="1" />
		
		<addForeignKeyConstraint baseColumnNames="role_id"
			baseTableName="users" constraintName="fk_tb_role_id"
			referencedColumnNames="role_id" referencedTableName="role" />
		
		<!-- Added the entity users. -->
		<createTable tableName="content">
			<column name="content_id" type="bigint" autoIncrement="${autoIncrement}">
		<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="content_path" type="varchar(255)" />
			<column name="content_description" type="varchar(500)" />
			<column name="upload_time" type="timestamp without time zone" />
			<column name="type" type="varchar(100)" />
			<column name="user_id" type="bigint" />
			<column name="createdate" type="timestamp without time zone" />
			<column name="updatedate" type="timestamp without time zone" />
			<column name="createdby" type="bigint" />
			<column name="updatedby" type="bigint" />
		</createTable>
		<createSequence sequenceName="content_sequence"
			startValue="1" incrementBy="1" />
		
		<addForeignKeyConstraint baseColumnNames="user_id"
			baseTableName="content" constraintName="fk_tb_user_id"
			referencedColumnNames="user_id" referencedTableName="users" />
			
			<!-- Added the entity albums. -->
		<createTable tableName="albums">
			<column name="album_id" type="bigint" autoIncrement="${autoIncrement}">
		<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="album_name" type="varchar(255)" />
			<column name="album_description" type="varchar(500)" />
			<column name="upload_time" type="timestamp without time zone" />
			<column name="user_id" type="bigint" />
			<column name="createdate" type="timestamp without time zone" />
			<column name="updatedate" type="timestamp without time zone" />
			<column name="createdby" type="bigint" />
			<column name="updatedby" type="bigint" />
		</createTable>
		<createSequence sequenceName="album_sequence"
			startValue="1" incrementBy="1" />
		
		<addForeignKeyConstraint baseColumnNames="user_id"
			baseTableName="albums" constraintName="fk_tb_user_id"
			referencedColumnNames="user_id" referencedTableName="users" />
			
			<!-- Added the entity album_content. -->
		<createTable tableName="album_content">
			<column name="album_content_id" type="bigint" autoIncrement="${autoIncrement}">
		<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="album_id" type="bigint" />
			<column name="content_id" type="bigint" />
			<column name="createdate" type="timestamp without time zone" />
			<column name="updatedate" type="timestamp without time zone" />
			<column name="createdby" type="bigint" />
			<column name="updatedby" type="bigint" />
		</createTable>
		<createSequence sequenceName="album_content_sequence"
			startValue="1" incrementBy="1" />
		
		<addForeignKeyConstraint baseColumnNames="album_id"
			baseTableName="album_content" constraintName="fk_tb_album_id"
			referencedColumnNames="album_id" referencedTableName="albums" />
			
		<addForeignKeyConstraint baseColumnNames="content_id"
			baseTableName="album_content" constraintName="fk_tb_content_id"
			referencedColumnNames="content_id" referencedTableName="content" />
			
		<loadData encoding="UTF-8" file="config/liquibase/role.csv"
			separator=";" tableName="role" />
			
		<loadData encoding="UTF-8" file="config/liquibase/users.csv"
			separator=";" tableName="users" />
		
			
		</changeSet>

</databaseChangeLog>
